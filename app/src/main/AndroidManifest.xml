        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitQuest"
        android:networkSecurityConfig="@xml/network_security_config">

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_native_app_key" />

        <activity
            android:name=".Running"
            android:exported="true" />
        <activity
            android:name=".Exercise"
            android:exported="true" />
        <activity
            android:name=".Ranking"
            android:exported="true" />
        <activity
            android:name=".Quest"
            android:exported="true" />
        <activity
            android:name=".Main"
            android:exported="true" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter android:label="kakao_login">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="kakao2ff3355d5d8d426cc4f716d72dc407d6" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>