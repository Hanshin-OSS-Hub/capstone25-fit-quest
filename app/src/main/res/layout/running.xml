<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="100dp"
    tools:paddingBottom="0dp"
    android:scrollbars="vertical"
    android:fadeScrollbars="true"
    android:background="#ffffff"
    tools:context=".Running">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/running"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintHorizontal_bias="0.02"

            android:text="러닝"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/run2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:layout_constraintHorizontal_bias="0.03"

            android:text="페이스 가이드와 함께달리기"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#7f7f7a"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2:0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/run2"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"

            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#e3e2e2"
            app:strokeColor="#000000"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="숙련도 선택"
                    android:textColor="#000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintVertical_bias="0.1" />

                <Button
                    android:id="@+id/easy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/btn_background_selector"
                    app:backgroundTint="@null"
                    android:padding="0dp"

                    android:text="입문"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintVertical_bias="0.8" />

                <Button
                    android:id="@+id/nomal"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/btn_background_selector"
                    app:backgroundTint="@null"
                    android:padding="0dp"

                    android:text="초급"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintVertical_bias="0.8"/>

                <Button
                    android:id="@+id/hard"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/btn_background_selector"
                    app:backgroundTint="@null"
                    android:padding="0dp"

                    android:text="중급"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.95"
                    app:layout_constraintVertical_bias="0.8"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card1"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"

            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#d0f6b5"
            app:strokeColor="#5ec812"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">



                <!-- easy 선택 시 표시 -->
                <TextView
                    android:id="@+id/card2_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입문 가이드                                            주 2~3회\n\n권장 시간
                                                20~25분\n권장 거리
                                            2.0~3.0km\n타깃 페이스
                                         8:30~9:30"
                    android:textSize="16sp"
                    android:lineSpacingExtra="8dp"/>

                <!-- nomal 선택 시 표시 -->
                <TextView
                    android:id="@+id/card2_nomal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초급 가이드                                                주 3회\n\n권장 시간
                                                30~35분\n권장 거리
                                            4.0~5.0km\n타깃 페이스
                                         6:50~7:40"
                    android:textSize="16sp"
                    android:lineSpacingExtra="8dp"
                    android:visibility="gone"/>

                <!-- hard 선택 시 표시 -->
                <TextView
                    android:id="@+id/card2_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중급 가이드                                            주 3~4회\n\n권장 시간
                                                40~50분\n권장 거리
                                            6.0~8.0km\n타깃 페이스
                                         5:30~6:10"
                    android:textSize="16sp"
                    android:lineSpacingExtra="8dp"
                    android:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- card2 아래 4개 박스 컨테이너 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp"
            android:padding="16dp">

            <!-- 1번 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#e3e2e2"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card4"
                app:layout_constraintDimensionRatio="1:0.6"
                android:layout_marginEnd="8dp">

                <!-- 내부 뷰 추가 가능 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달린 거리"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 km"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.8" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 2번 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#e3e2e2"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:0.6"
                android:layout_marginStart="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달린 시간"
                        android:textColor="#000"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.1" />

                    <TextView
                        android:id="@+id/run_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 : 00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.8" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3번 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#e3e2e2"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/card3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card6"
                app:layout_constraintDimensionRatio="1:0.6"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp">

                <!-- 내부 뷰 추가 가능 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 페이스"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- : --"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.8" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4번 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#e3e2e2"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/card4"
                app:layout_constraintStart_toEndOf="@id/card5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:0.6"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp">

                <!-- 내부 뷰 추가 가능 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평균 페이스"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- : --"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintVertical_bias="0.8" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/running_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="러닝 시작"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:backgroundTint="#000000"
            app:cornerRadius="16dp"
            android:padding="16dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/another"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="다른 사람들은 얼마나 뛰는지 알아보기"
            android:textSize="16sp"
            android:textColor="#000000"
            android:backgroundTint="#ffffff"
            app:cornerRadius="16dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"

            android:autoSizeTextType="uniform"

            app:layout_constraintTop_toBottomOf="@id/running_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>