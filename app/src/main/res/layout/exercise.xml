<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="100dp"
    tools:paddingBottom="0dp"
    android:scrollbars="vertical"
    android:fadeScrollbars="true"
    android:background="#ffffff"
    tools:context=".Ecercise">



    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/exercise_fragment_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/exerxise2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/exer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintHorizontal_bias="0.02"

            android:text="운동"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08"
            app:layout_constraintHorizontal_bias="0.03"

            android:text="오늘의 운동을 선택하세요"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#7f7f7a"
            />

        <Button
            android:id="@+id/exerxise1"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="가벼운 운동\n\n난이도별 홈 트레이닝\n\n레벨 1~5 단계별 운동"
            android:textSize="16sp"
            android:textColor="#000000"
            android:backgroundTint="#dbe2fa"
            app:cornerRadius="16dp"
            app:strokeColor="#093adc"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/today"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1:1" />

        <Button
            android:id="@+id/exerxise2"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:text="스트레칭\n\n부위별 스트레칭\n\n8가지 부위선택"
            android:textSize="16sp"
            android:textColor="#000000"
            android:backgroundTint="#d0f6b5"
            app:cornerRadius="16dp"
            app:strokeColor="#5ec812"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/exerxise1"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1:1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>